<div id="<%= dom_id beef_cut %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= beef_cut.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Muscle anatomy:</strong>
    <%= beef_cut.muscle_anatomy %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= beef_cut.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cut type:</strong>
    <%= beef_cut.cut_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slicing instructions:</strong>
    <%= beef_cut.slicing_instructions %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this beef cut", beef_cut, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this beef cut', edit_beef_cut_path(beef_cut), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
